[user]
	name = Andrew Zures
	email = andrew.zures@gmail.com

[color]
  ui = auto

[alias]
  aa = add -A .
  amend = commit --amend

  br = branch
  brv = branch -v
  brd = branch -D

  ci = commit
  cm = commit -m
  cma = !git aa && git commit -m
  co = checkout
  cob = checkout -B
  rh = reset HEAD
  last = log -1 HEAD

  di = diff
  dc = diff --cached
  ds = diff --staged

  st = status

  fml = !git aa && git reset --hard
  pop = !git stash pop
  subs = submodule update --init --recursive
  reset-soft = reset --soft HEAD~1
  checkpoint = commit -m "checkpoint"
  lg = "!source ~/.githelpers && pretty_git_log"
  rl = reflog -7

[push]
  default = current

[merge]
  tool = opendiff
	tool = mvimdiff
	tool = mvimdiff
	tool = prompt
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[core]
	editor = vim
	excludesfile = /Users/andrewzures/.gitignore_global
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
